<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>com.app.controlador.RegistroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.app.controlador.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BienvenidaServlet</servlet-name>
        <servlet-class>com.app.controlador.BienvenidaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalcularIMCServlet</servlet-name>
        <servlet-class>com.app.controlador.CalcularIMCServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesionServlet</servlet-name>
        <servlet-class>com.app.controlador.CerrarSesionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/RegistroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BienvenidaServlet</servlet-name>
        <url-pattern>/BienvenidaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalcularIMCServlet</servlet-name>
        <url-pattern>/CalcularIMCServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesionServlet</servlet-name>
        <url-pattern>/CerrarSesionServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
